{{#each books as |book|}}
  <section class="book" data-id="{{book.id}}">
    <h2>
      <small>Title:</small> {{limit book.title 15}}
    </h2>
    <p>
      <small>Author:</small>
      {{#if book.author}}
        {{book.author}}
      {{else}}
        No author provided.
      {{/if}}
    </p>
    <button type="submit" class="btn btn-danger delete-book">Remove</button>
  </section>

{{/each}}
